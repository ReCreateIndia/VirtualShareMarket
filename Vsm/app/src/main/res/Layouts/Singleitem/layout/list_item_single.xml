<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="15dp"


    app:cardElevation="15dp"
    android:background="#ffffff">
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"


        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:visibility="visible"
                android:id="@+id/startupVideo"
                android:layout_width="match_parent"
                android:layout_height="180dp"

                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/vsm_logo" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom"
                  >

                <TextView
                    android:id="@+id/sharename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lines="1"

                    android:background="#188F84"
                    tools:autoSizeTextType="uniform"

                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="7dp"
                    android:text="Flipkart Private Limited"
                    android:textSize="22sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>



        <TextView
            android:id="@+id/textView10"
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:textColor="#000000"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />
        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/chart"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
        <Button
            android:id="@+id/gotoshare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Invest in me"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="#FF533D78"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:background="@drawable/top" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:weightSum="3"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="People Invested"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="18sp"


                    />
                <TextView
                    android:id="@+id/peopleinvested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000"
                    android:textSize="18sp"


                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Startup growth"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="18sp"


                    />
                <ImageView
                    android:id="@+id/starupgrowth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/top"


                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginTop="15dp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tech Startup"
                    android:gravity="center"
                    android:background="#FF533D78"
                    android:textColor="#FFFFFF"
                    android:padding="4dp"
                    android:textSize="18sp"


                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>