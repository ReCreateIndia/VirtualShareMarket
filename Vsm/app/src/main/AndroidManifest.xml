<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="startup.carvaan.Main_Activities">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vsm_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vsm_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutShare">

        </activity>
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/FullScreen">

        </activity>
        <activity android:name=".RegisterActivity"></activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/FullScreen"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1372656325166770~1018059934"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>